  </head>
  <body>
    <%- include('partials/_header') %>
    <div class="feedback-image">
      <img src="/images/feedback.png">
    </div>
    <h2 class="feedback-order"> Order No. <%=items[0].id%></h2>
    <div class="feedback">

   <Form method="POST" action="/myorders/o/<%=items[0].id%>">
    <div class="row mb-3 align-items-center">
     <label for="customRange3" class="form-label">Give your rating for this order</label>
     <div class="col-sm-10">
      <select required name="my_rating" >
        <option value>select</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
       </select>
     <!-- <input type="range" class="form-range" name="my_rating" min="0" max="5" step="1" id="customRange3"> -->
    </div>
    </div>

      <div class="row mb-3">
      <label>Describe how was your experience with this order</label>
      <div class="col-sm-10">
      <textarea name = "my_feedback"></textarea>
      </div>
      </div>
      <div>
      <button type="submit" value = "Submit" class="btn btn-primary">Submit</button>
    </div>
    </Form>
  </div>
    </body>
    </html>
